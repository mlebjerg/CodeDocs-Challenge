@using Newtonsoft.Json
@model IEnumerable<CodeDocs_Challenge.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEdited)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr onclick="document.location = '@(Url.Action("Details", new {Id = item.Id}))';">
        <td>
            @if(item.ImgBlob != null){
            <img alt="object-fit: cover;" src="@item.ImgBlob" data-holder-rendered="true" style="height: calc(47px - 24px); max-width:100%; object-fit: contain;">
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @foreach (var lang in item.LanguageList)
            {<span class="badge badge-pill badge-secondary">@lang</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastEdited)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
